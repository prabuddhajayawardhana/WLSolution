@model IEnumerable<WLSolution.Application.DTOs.ProductDto>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-4">
    <h1 class="mb-4">Product List</h1>

    <p class="text-end mb-3">
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary">Create New Product</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Price</td>
                    <td>@product.Stock</td>
                    <td>
                        <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
