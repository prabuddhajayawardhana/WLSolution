@model WLSolution.Application.DTOs.ProductDto

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Product</h1>
    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Edit">
        <div class="form-group">
            <input asp-for="ProductId" class="form-control" type="hidden" />
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Stock" class="form-label"></label>
            <input asp-for="Stock" class="form-control" type="number" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="form-group text-end mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary ms-2">Back to List</a>
</div>
